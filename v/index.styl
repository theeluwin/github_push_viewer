html, body
	font-family sans-serif
	margin 0
a
	color #4183c4
	text-decoration none
	&:hover
		text-decoration underline
ul
	list-style-type none
#activity
	padding 0
	margin 0
	margin-left 24px
	li
		margin 12px 0
	ul
		padding 0
		margin 0
		padding-left 40px
	.push
		.user_icon
			height 24px
			margin-right 4px
			vertical-align text-top
		time
			margin-left 10px
			font-size 10pt
			color #888
			&:before
				content '|'
				margin-right 5px
				color #ccc
		.body
			clear both
			li
				margin 3px 0
			details
				display inline-block
				vertical-align text-top
				p
					margin 0
					padding-left 2px
					font-family monospace
.sha
	font-family monospace